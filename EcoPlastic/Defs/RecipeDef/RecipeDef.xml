<?xml version="1.0" encoding="utf-8"?>

<Defs>

    <!--  ================= Chem fuel From Plastic Recipe  ================= -->
    <RecipeDef>
        <!-- RecipeDefs/Recipes_Production_Vanilla.xml > Make_ChemfuelFromWood -->
        <!-- ID -->
        <defName>ChemfuelFromPlasticRecipe</defName>
        <label>ChemfuelFromPlasticRecipe.label</label>
        <description>ChemfuelFromPlasticRecipe.description</description>

        <!-- Mechanic CORE -->
        <jobString>ChemfuelFromPlasticRecipe.jobString</jobString>
        <workAmount>2000</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat> <!-- Work Speed Stat -->
        <researchPrerequisite>PlasticBasicResearch</researchPrerequisite>
        
        <!-- Preserves work progress if interrupted -->
        <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
        <displayPriority>0</displayPriority> <!-- priority work-->

        <!-- Where you craft it  -->
        <recipeUsers>
            <li>BiofuelRefinery</li>
        </recipeUsers>

        <!-- INGREDIENTS -->
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>PlasticBasic</li>
                        <li>PlasticIndustrial</li>
                        <li>PlasticFiber</li>
                        <li>IncendiaryPlastic</li>
                    </thingDefs>
                </filter>
                <count>50</count>
            </li>
        </ingredients>

        <!-- Allow mixing different plant ingredients in same recipe -->
        <allowMixingIngredients>true</allowMixingIngredients>

        <!-- Default UI filter - enables all Plastics by default -->
        <fixedIngredientFilter>
            <thingDefs>
                <li>PlasticBasic</li>
                <li>PlasticIndustrial</li>
                <li>PlasticFiber</li>
                <li>IncendiaryPlastic</li>
            </thingDefs>
        </fixedIngredientFilter>

        <products>
            <Chemfuel>40</Chemfuel>
        </products>

        <!-- Effect Working & sound -->
        <effectWorking>Cremate</effectWorking>
        <soundWorking>Recipe_Cremate</soundWorking>
    </RecipeDef>
    
    <!--  ================= Plastic Basic Recipe  ================= -->
    <RecipeDef>
        <!-- RecipeDefs/Recipes_Production_Vanilla.xml > Make_ChemfuelFromWood -->
        <!-- ID -->
        <defName>PlasticBasicRecipe</defName>
        <label>PlasticBasicRecipe.label</label>
        <description>PlasticBasicRecipe.description</description>

        <!-- Mechanic CORE -->
        <jobString>PlasticBasicRecipe.jobString</jobString>
        <workAmount>800</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat> <!-- Work Speed Stat -->
        <workSkill>Crafting</workSkill> <!-- Work XP Skill -->
        <researchPrerequisite>PlasticBasicResearch</researchPrerequisite> <!-- unlock this items See: EcoPlastic/Doc/Images/Research/Unlock_PlasticBasic.png -->

        <!-- Requirements -->
        <skillRequirements>
            <Crafting>5</Crafting>
        </skillRequirements>

        <!-- Preserves work progress if interrupted -->
        <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
<!--        <displayPriority>0</displayPriority> &lt;!&ndash; priority work&ndash;&gt;-->
        
        <!-- Where you craft it  -->
        <recipeUsers>
            <li>BiofuelRefinery</li>
        </recipeUsers>

        <!-- INGREDIENTS -->
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>PlantFoodRaw</li>
                    </categories>
                    <disallowedThingDefs>
                        <li>RawFungus</li>
                    </disallowedThingDefs>
                </filter>
                <count>50</count>
            </li>
        </ingredients>

        <!-- Allow mixing different plant ingredients in same recipe -->
        <allowMixingIngredients>true</allowMixingIngredients>

        <!-- Default UI filter - enables PlantFoodRaw by default -->
        <defaultIngredientFilter>
            <categories>
                <li>PlantFoodRaw</li>
            </categories>
        </defaultIngredientFilter>

        <!-- Plant food filtering - excludes fungi and drugs -->
        <fixedIngredientFilter>
            <categories>
                <li>PlantFoodRaw</li>
            </categories>
            <disallowedThingDefs>
                <li>RawFungus</li>
            </disallowedThingDefs>
        </fixedIngredientFilter>

        <!-- OUTPUT material-->
        <products>
            <PlasticBasic>45</PlasticBasic>
        </products>

        <!-- Effect AUDIO/VISUAL -->
        <effectWorking>Cremate</effectWorking>
        <soundWorking>Recipe_Cremate</soundWorking>
    </RecipeDef>
    
