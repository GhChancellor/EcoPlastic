<?xml version="1.0" encoding="utf-8"?>

<Defs>
    
    <!--  ================= Chem fuel From Plastic Recipe  ================= -->
    <RecipeDef>
        <!-- ID -->
        <defName>ChemfuelFromPlasticRecipe</defName>
        <label>ChemfuelFromPlasticRecipe.label</label>
        <description>ChemfuelFromPlasticRecipe.description</description>

        <!-- Mechanic CORE -->
        <jobString>ChemfuelFromPlasticRecipe.jobString</jobString>
        <effectWorking>Cremate</effectWorking>
        <soundWorking>Recipe_Cremate</soundWorking>
        <workAmount>2000</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat> <!-- Work Speed Stat -->

        <!-- Where you craft it  -->
        <recipeUsers>
            <li>BiofuelRefinery</li>
        </recipeUsers>

        <!-- INGREDIENTS -->
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>PlasticBasic</li>
                        <li>PlasticFiber</li>
                    </thingDefs>
                </filter>
                <count>50</count>
            </li>
        </ingredients>

        <!-- Allow mixing different plant ingredients in same recipe -->
        <allowMixingIngredients>true</allowMixingIngredients>

        <!-- Default UI filter - enables all Plastics by default -->
        <fixedIngredientFilter>
            <thingDefs>
                <li>PlasticBasic</li>
                <li>PlasticIndustrial</li>
                <li>PlasticFiber</li>
            </thingDefs>
        </fixedIngredientFilter>

        <products>
            <Chemfuel>45</Chemfuel>
        </products>
    </RecipeDef>

    <!--  ================= Plastic Basic Recipe  ================= -->
    <RecipeDef>
        <!-- ID -->
        <defName>PlasticBasicRecipe</defName>
        <label>PlasticBasicRecipe.label</label>
        <description>PlasticBasicRecipe.description</description>

        <!-- Mechanic CORE -->
        <jobString>PlasticBasicRecipe.jobString</jobString>
        <workAmount>800</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat> <!-- Work Speed Stat -->
        <workSkill>Crafting</workSkill> <!-- Work XP Skill -->
        <researchPrerequisite>PlasticBasicResearch</researchPrerequisite> <!-- unlock this items See: EcoPlastic/Doc/Images/Research/Unlock_PlasticBasic.png -->
        
        <!-- Requirements -->
        <skillRequirements>
            <Crafting>5</Crafting>
        </skillRequirements>

        <!-- Where you craft it  -->
        <recipeUsers>
            <li>BiofuelRefinery</li>
        </recipeUsers>

        <!-- INGREDIENTS -->
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>PlantFoodRaw</li>
                    </categories>
                    <disallowedThingDefs>
                        <li>RawFungus</li>
                    </disallowedThingDefs>
                </filter>
                <count>50</count>
            </li>
        </ingredients>

        <!-- Allow mixing different plant ingredients in same recipe -->
        <allowMixingIngredients>true</allowMixingIngredients>

        <!-- Default UI filter - enables PlantFoodRaw by default -->
        <defaultIngredientFilter>
            <categories>
                <li>PlantFoodRaw</li>
            </categories>
        </defaultIngredientFilter>

        <!-- Plant food filtering - excludes fungi and drugs -->
        <fixedIngredientFilter>
            <categories>
                <li>PlantFoodRaw</li>
            </categories>
            <disallowedThingDefs>
                <li>RawFungus</li>
            </disallowedThingDefs>
        </fixedIngredientFilter>

        <!-- OUTPUT material-->
        <products>
            <PlasticBasic>45</PlasticBasic>
        </products>

        <!-- Effect AUDIO/VISUAL -->
        <effectWorking>Cremate</effectWorking>
        <soundWorking>Recipe_Cremate</soundWorking>
    </RecipeDef>


