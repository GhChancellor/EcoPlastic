    <!-- Plastic fiber material with scientifically coherent values -->
    <ThingDef ParentName="ResourceBase">
        <!-- CORE IDENTITY -->
        <defName>PlasticFiber</defName>
        <label>PlasticFiber.label</label>
        <description>PlasticFiber.description</description>

        <!-- VISUAL REPRESENTATION -->
        <graphicData>
            <texPath>Things/Item/Resource/Cloth</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
            <color>(240,248,240)</color>
        </graphicData>

        <!-- RAW MATERIAL STATS -->
        <statBases>
            <!-- Armor protection - synthetic fibers offer decent cut resistance -->
            <StuffPower_Armor_Sharp>0.25</StuffPower_Armor_Sharp>     <!-- Better than cloth -->
            <StuffPower_Armor_Blunt>0.10</StuffPower_Armor_Blunt>     <!-- Basic padding -->
            <StuffPower_Armor_Heat>0.05</StuffPower_Armor_Heat>       <!-- Melts easily -->

            <!-- Thermal insulation - plastic fibers excel at trapping air -->
            <StuffPower_Insulation_Cold>20</StuffPower_Insulation_Cold> <!-- Good cold protection -->
            <StuffPower_Insulation_Heat>15</StuffPower_Insulation_Heat> <!-- Excellent heat retention -->

            <!-- Material properties -->
            <MaxHitPoints>95</MaxHitPoints>                            <!-- Stronger than cloth -->
            <MarketValue>1.8</MarketValue>                             <!-- Slightly more expensive -->
            <Mass>0.022</Mass>                                         <!-- Lighter than cloth -->
            <Flammability>1.2</Flammability>                          <!-- Burns faster than cloth -->
            <DeteriorationRate>3.5</DeteriorationRate>                <!-- More durable -->
        </statBases>

        <burnableByRecipe>true</burnableByRecipe>                  <!-- Can be used as fuel -->
        <healthAffectsPrice>false</healthAffectsPrice>              <!-- No effect on price if damaged  -->
        <minRewardCount>30</minRewardCount>                       <!-- Quest rewards -->

        <stuffProps>
            <statFactors>
                <Flammability>1.2</Flammability>                      <!-- Multified by fire ( Flammability * Flammability ) -->
                <Beauty>0.8</Beauty>                                   <!-- Less attractive than natural fiber -->
                <MaxHitPoints>1.2</MaxHitPoints>                       <!-- Durable synthetic -->
            </statFactors>
            <!-- Material categories this can be used for -->
            <categories>
                <li>Fabric</li>
            </categories>

            <commonality>1.4</commonality>                             <!-- Spawn probability, Cloth 1.4 -->
            <allowColorGenerators>true</allowColorGenerators>
            <canSuggestUseDefaultStuff>true</canSuggestUseDefaultStuff> <!-- Allow quest to suggest default stuff for this material -->
        </stuffProps>

        <!-- Inventory category -->
        <thingCategories>
            <li>Textiles</li>
        </thingCategories>

        
        <comps>
            <li>
                <!-- CompColorable - Enables in-game dyeing system-->
                <compClass>CompColorable</compClass>
            </li>
        </comps>

        <colorGeneratorInTraderStock Class="ColorGenerator_Options">
            <options>
                <li>
                    <weight>5</weight>
                    <only>(0.33,0.33,0.33,1)</only>
                </li>
                <li>
                    <weight>10</weight>
                    <min>(0.3,0.3,0.3,1)</min>
                    <max>(0.9,0.9,0.9,1)</max>
                </li>
                <li>
                    <weight>5</weight>
                    <only>(0.9,0.9,0.9,1)</only>
                </li>
            </options>
        </colorGeneratorInTraderStock>
        <allowedArchonexusCount>80</allowedArchonexusCount>
    </ThingDef>

</Defs>